{
    "id": "iris.app.Bili.Advanced",
    "name": "Bili Advanced",
    "description": "提供更多自定义的功能",
    "author": "@iris",
    "icon": "https://raw.githubusercontent.com/Orz-3/mini/master/Color/Bili.png",
    "repo": "https://github.com/Erica-Iris/SQLS",
    "onInstall": {
        "title": "安装确认",
        "message": "本订阅包含quanx重写资源, 是否需要自动安装?",
        "install": {
            "QuanX": "quantumult-x:///add-resource?remote-resource=%7B%22rewrite_remote%22%3A%5B%22https%3A%2F%2Fraw.githubusercontent.com%2FErica-Iris%2FSQLS%2Fmain%2Fquanx%2Frewrite%2Fbilibili.snippet%2Ctag%3DBilibiliLive%22%5D%7D"
        }
    },
    "apps": [
        {
            "id": "Bili.Advanced.Live",
            "name": "Bilibili Live Enhanced",
            "keys": [
                "@Bili.Advanced.Live.card",
                "@Bili.Advanced.Live.Caches",
                "@Bili.Advanced.Live.Cards"
            ],
            "descs_html": [
                "<h4 align=\"center\">Bilibili Live Enhanced</h4>",
                "<h4 align=\"center\">直播间卡片设置</h4>"
            ],
            "settings": [
                {
                    "id": "@Bili.Advanced.Live.card.firstID",
                    "name": "关联的第一个ID",
                    "val": "",
                    "type": "text",
                    "desc": "请输入需要关联的第一个ID"
                },
                {
                    "id": "@Bili.Advanced.Live.card.secID",
                    "name": "关联的第二个ID",
                    "val": "",
                    "type": "text",
                    "desc": "请输入需要关联的第二个ID"
                },
                {
                    "id": "@Bili.Advanced.Live.card.thirdID",
                    "name": "关联的第三个ID",
                    "val": "",
                    "type": "text",
                    "desc": "请输入需要关联的第三个ID"
                },
                {
                    "id": "@Bili.Advanced.Live.card.fourthID",
                    "name": "关联的第四个ID",
                    "val": "",
                    "type": "text",
                    "desc": "请输入需要关联的第四个ID"
                }
            ],
            "author": "@IrisW",
            "repo": "https://raw.githubusercontent.com/Erica-Iris/SQLS",
            "icons": [
                "https://raw.githubusercontent.com/Orz-3/mini/master/Color/Bili.png"
            ]
        },
        {
            "id": "Bili.Advanced.Live.Settings",
            "name": "B站直播间设置",
            "keys": [
                "@Bili.Advanced.Live.Settings"
            ],
            "descs_html": [
                "<h4 align=\"center\">直播间设置</h4>"
            ],
            "settings": [
                {
                    "id": "@Bili.Advanced.Live.Settings.app_background",
                    "name": "设置直播间背景图片",
                    "val": "http://i0.hdslb.com/bfs/live/88bbfa155d3716d3be89135c4f6374b22570a858.jpg",
                    "type": "text",
                    "desc": "请输入能访问的，且大小符合手机大小的图片的地址。"
                },
                {
                    "id": "@Bili.Advanced.Live.Settings.close_more_live",
                    "name": "关闭更多直播按钮",
                    "val": false,
                    "type": "boolean",
                    "desc": "是否关闭更多直播按钮"
                },
                {
                    "id": "@Bili.Advanced.Live.Settings.close_follow_card",
                    "name": "关闭关注主播卡片",
                    "val": true,
                    "type": "boolean",
                    "desc": "是否关闭关注主播卡片"
                },
                {
                    "id": "@Bili.Advanced.Live.Settings.close_help_me_play_outer",
                    "name": "关闭帮我玩卡片",
                    "val": false,
                    "type": "boolean",
                    "desc": "是否关闭帮我玩卡片"
                }
            ],
            "author": "@IrisW",
            "repo": "https://raw.githubusercontent.com/Erica-Iris/SQLS",
            "icons": [
                "https://raw.githubusercontent.com/Orz-3/mini/master/Color/Bili.png"
            ]
        }
    ]
